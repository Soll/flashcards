<%= simple_form_for @card, html: {class: "form-horizontal", multipart: true} do |f| %>
  <div class="form-group">
    <div class="col-sm-7">
      <%= f.input :original_text, label: "#{t('original_text')}", class: "form-control" %>        				
    </div>
  </div>	
  
  <div class="form-group">
    <div class="col-sm-7">
      <%= f.input :translated_text, label: "#{t('translated_text')}", class: "form-control" %>
    </div>
  </div>

  <%= f.hidden_field :user_id, value: current_user.id %>

  <%= f.file_field :avatar %>
  
  <div class="form-group">
    <div class="col-sm-7">
      <%= f.collection_select(:category_id, Category.all, :id, :name, {}, { class: "form-control" }) %> 
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-3">
      <%= f.submit "#{t('add')}", class: "form-control" %>
    </div>
  </div>
<% end %>
