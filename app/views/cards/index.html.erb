<div class="container col-md-10">
		<h4>Список карточек</h4>
		<table class="table table-hover">
 			<tr>
 				<td><strong>#</strong></td>
 				<td><strong>Исходный текст</strong></td>
 				<td><strong>Перевод</strong></td>
 				<td><strong>Дата перевода</strong></td>
 				<td><strong>Категория</strong></td>
 				<td><strong>Операции</strong></td>
 			</tr>
 			
 			<% @cards.each do |c| %>
 				<tr>
 					<td><%= c.id %></td>
 					<td><%= c.original_text %></td>
 					<td><%= c.translated_text %></td>
 					<td><%= c.review_date.strftime("%d/%m/%Y") %></td>
 					<td><%= c.category.name %></td>
 					<td><%= link_to "Редактировать", edit_card_path(c), 
 					        class: "btn btn-primary btn-xs", 
 					        role: "button"  %>
 					    
 					    <%= link_to "Удалить", card_path(c), 
 					        method: :delete, 
 					        data: { confirm: "Уверены?" }, 
 					        class: "btn btn-primary btn-xs", 
 					        role: "button" %>

 					     <%= link_to "На проверку!", card_path(c),
 					        method: :set_review_date_to_now, 
 					        class: "btn btn-primary btn-xs", 
 					        role: "button"  %></td>
 				</tr>
 			<% end %>
 		</table>
	</div>
