<%= simple_form_for @category, html: {class: "form-horizontal"} do |f| %>
  <div class="form-group">
    <div class="col-sm-7">
      <%= f.input :name, label: "#{t('cat_name')}", class: "form-control" %>        				
    </div>
  </div>	
  
  <div class="form-group">
    <div class="col-sm-3">
      <%= f.submit "#{t('add')}", class: "form-control" %>
    </div>
  </div>
<% end %>
